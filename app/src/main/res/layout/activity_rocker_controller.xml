<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rocker_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="com.zhida.car.ui.RockerControllerActivity">


    <RelativeLayout
        android:id="@+id/left_touch_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:padding="30dp">

        <com.zhida.car.ui.widget.VerticalSeekBar
            android:id="@+id/rocker_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="50"
            android:progressDrawable="@drawable/rocker_seekbar_style"
            android:thumb="@drawable/rocker_button_2_press"
            android:thumbOffset="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp">

                <com.marcinmoskala.arcseekbar.ArcSeekBar
                    android:id="@+id/seekArc_left"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    app:maxProgress="100"
                    app:progress="50"
                    app:progressBackgroundColor="@color/color_light"
                    app:progressBackgroundWidth="2dp"
                    app:progressColor="@color/color_light"
                    app:progressWidth="2dp"
                    app:roundEdges="true"
                    app:thumb="@drawable/rocker_btn_style_selector" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp">

                <com.marcinmoskala.arcseekbar.ArcSeekBar
                    android:id="@+id/seekArc_right"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    app:maxProgress="100"
                    app:progress="50"
                    app:progressBackgroundColor="@color/color_light"
                    app:progressBackgroundWidth="2dp"
                    app:progressColor="@color/color_light"
                    app:progressWidth="2dp"
                    app:roundEdges="true"
                    app:thumb="@drawable/rocker_btn_style_selector" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_touch_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:padding="30dp">

        <com.zhida.car.ui.widget.VerticalSeekBar
            android:id="@+id/rocker_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="50"
            android:progressDrawable="@drawable/rocker_seekbar_style"
            android:thumb="@drawable/rocker_button_2_press"
            android:thumbOffset="0dp" />

    </RelativeLayout>

</LinearLayout>
