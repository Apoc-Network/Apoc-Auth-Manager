<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rocker_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    tools:context="com.zhida.car.ui.RockerControllerActivity">


    <RelativeLayout
        android:id="@+id/left_touch_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="30dp">

        <com.zhida.car.ui.widget.VerticalSeekBar
            android:id="@+id/rocker_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="50"
            android:progressDrawable="@drawable/rocker_seekbar_style"
            android:thumb="@drawable/rocker_button_2_press"
            android:thumbOffset="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="100dp">

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/seekArc_left"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="32dp"
            app:arcColor="@color/color_light"
            app:arcWidth="2dp"
            app:max="100"
            app:progress="50"
            app:progressColor="@color/color_light"
            app:progressWidth="2dp"
            app:rotation="180"
            app:startAngle="120"
            app:sweepAngle="120"
            app:thumb="@drawable/rocker_btn_style_selector"
            app:touchInside="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="100dp">

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/seekArc_right"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="32dp"
            app:arcColor="@color/color_light"
            app:arcWidth="2dp"
            app:max="100"
            app:progress="50"
            app:progressColor="@color/color_light"
            app:progressWidth="2dp"
            app:rotation="180"
            app:startAngle="120"
            app:sweepAngle="120"
            app:thumb="@drawable/rocker_btn_style_selector"
            app:touchInside="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_touch_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="30dp">

        <com.zhida.car.ui.widget.VerticalSeekBar
            android:id="@+id/rocker_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="50"
            android:progressDrawable="@drawable/rocker_seekbar_style"
            android:thumb="@drawable/rocker_button_2_press"
            android:thumbOffset="0dp" />

    </RelativeLayout>

</LinearLayout>
