<resources>

    <style name="AppTheme" parent="android:Theme.NoTitleBar" />

    <style name="startButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="AppTheme2" parent="android:Theme.Light" />


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AnimActivityTheme">
        <item name="android:windowAnimationStyle">@style/ControllerActivityAnimation</item>
    </style>

    <style name="ControllerActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/controller_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/controller_activity_out</item>
    </style>
</resources>